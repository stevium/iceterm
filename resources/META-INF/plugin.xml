<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <id>org.jetbrains.plugins.iceterm</id>
  <name>IdeaConEmu</name>
  <version>1.0</version>
  <vendor email="milos@mstevanovic.net" url="http://www.stevium.com">Stevium</vendor>
  <description><![CDATA[
      Embedded ConEmu Terminal
      <em>Plugin that enables running ConEmu inside IntelliJ IDEA</em>
    ]]></description>

  <change-notes><![CDATA[
      Initial Implementation
      <em>Integrated ConEmu within IntelliJ IDEA IDE</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <!--<extensions defaultExtensionNs="com.intellij">-->
    <!--<toolWindow id="IdeaConEmu" secondary="true" icon="/iceterm/plus.png" anchor="right"-->
                <!--factoryClass="iceterm.IceTermToolWindowFactory"/>-->
  <!--</extensions>-->

  <!--<project-components>-->
    <!--<component>-->
      <!--<interface-class>iceterm.IceTermView</interface-class>-->
      <!--<implementation-class>iceterm.IceTermView</implementation-class>-->
    <!--</component>-->
  <!--</project-components>-->
    <!--<xi:include href="terminal.xml"></xi:include>-->

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="IdeaConEmu" secondary="true" icon="/iceterm/plus.png" anchor="right"
                factoryClass="iceterm.IceTermToolWindowFactory"/>

    <projectConfigurable groupId="tools" groupWeight="130" displayName="IceTerm" id="iceterm"
    instance="iceterm.IceTermOptionsConfigurable"/>

    <applicationService serviceImplementation="iceterm.IceTermOptionsProvider"/>

    <projectService serviceImplementation="iceterm.IceTermProjectOptionsProvider"/>
  </extensions>

  <project-components>
    <component>
      <interface-class>iceterm.IceTermView</interface-class>
      <implementation-class>iceterm.IceTermView</implementation-class>
    </component>
  </project-components>

  <extensionPoints>
  <extensionPoint qualifiedName="iceterm.localTerminalCustomizer"
  interface="iceterm.LocalTerminalCustomizer"/>
  </extensionPoints>
  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>