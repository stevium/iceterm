<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
  <id>org.jetbrains.plugins.iceterm</id>
  <name>IceTerm</name>
  <version>0.0.6</version>
  <vendor email="milos@mstevanovic.net" url="http://www.stevium.com">Stevium</vendor>
  <description><![CDATA[
      IceTerm is a plugin for integrating ConEmu terminal emulator as a tool window inside IntelliJ platform based IDEs.
    ]]></description>

  <change-notes><![CDATA[
      Fix issues with closing and prevent ConEmu from crashing

      Initial ImplementationI - Integrated ConEmu within IntelliJ IDEA IDE
    ]]>
  </change-notes>

  <idea-version since-build="191.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <postStartupActivity implementation="org.iceterm.IceTermPostStartupActivity"/>

    <toolWindow id="IceTerm" secondary="true" icon="/iceterm/conemu_13x13.svg" anchor="right"
                factoryClass="org.iceterm.IceTermToolWindowFactory"/>

    <projectConfigurable groupId="tools" groupWeight="130" displayName="IceTerm" id="iceterm"
    instance="org.iceterm.IceTermOptionsConfigurable"/>

    <applicationService serviceImplementation="org.iceterm.IceTermOptionsProvider"/>

    <projectService serviceImplementation="org.iceterm.IceTermProjectOptionsProvider"/>
  </extensions>

  <project-components>
    <component>
      <interface-class>org.iceterm.IceTermView</interface-class>
      <implementation-class>org.iceterm.IceTermView</implementation-class>
    </component>
  </project-components>

  <extensionPoints>
  <extensionPoint qualifiedName="iceterm.localTerminalCustomizer"
  interface="org.iceterm.LocalTerminalCustomizer"/>
  </extensionPoints>

  <actions>
    <action id="IceTerm.OpenInConEmu" class="org.iceterm.action.OpenInConEmuAction"
            text="Open in ConEmu"
            description="Open current file location in ConEmu terminal"
            icon="/iceterm/conemu_13x13.svg">
      <add-to-group group-id="RevealGroup" anchor="last"/>
      <add-to-group group-id="TouchBarDefault_alt" anchor="last"/>
    </action>
    <action id="IceTerm.OpenInNewConEmuTab" class="org.iceterm.action.OpenInConEmuTabAction"
            text="Open in New ConEmu Tab"
            description="Open current file location in ConEmu terminal and create the new Tab"
            icon="/iceterm/conemu_13x13.svg">
      <add-to-group group-id="RevealGroup" anchor="last"/>
      <add-to-group group-id="TouchBarDefault_alt" anchor="last"/>
    </action>
  </actions>

  <depends>com.intellij.modules.platform</depends>

</idea-plugin>